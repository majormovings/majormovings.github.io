<%
function formatPhoneNumber(phoneNumberString) {
    var cleaned = ('' + phoneNumberString).replace(/\D/g, '');
    var match = cleaned.match(/^(1|)?(\d{3})(\d{3})(\d{4})$/);
    if (match) {
        var intlCode = (match[1] ? '+1 ' : '');
        return [intlCode, '(', match[2], ') ', match[3], '-', match[4]].join('');
    }
    return null;
}
%>
<section id="topbar" class="topbar d-flex align-items-center">
    <div class="container d-flex justify-content-center justify-content-md-between">
        <div class="contact-info d-flex align-items-center">
            <span class="bi bi-envelope d-flex align-items-center">
                <a href="mailto:<%= root.config.email %>"><%= root.config.email %></a>
            </span>
            <span class="bi bi-phone d-flex align-items-center ms-4">
                <a href="tel:<%= root.config.phone %>" target="_blank"><%= formatPhoneNumber(root.config.phone) %></a>
            </span>
        </div>
        <div class="social-links d-none d-md-flex align-items-center">
            <a href="#" title="Twitter"  class="twitter"><i class="bi bi-twitter"></i></a>
            <a href="#" title="Facebook" class="facebook"><i class="bi bi-facebook"></i></a>
            <a href="#" title="Instagram" class="instagram"><i class="bi bi-instagram"></i></a>
    </div>
</section>